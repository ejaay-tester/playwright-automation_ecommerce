{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["@playwright/test", "node"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["tests/**/*.ts", "playwright.config.ts"]
}
