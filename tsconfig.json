{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "types": ["@playwright/test", "@types/node"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["tests/**/*.ts", "playwright.config.ts"]
}
